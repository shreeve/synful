    .codehilite .nd     { color: #555555; font-weight: bold }  /* Name.Decorator              */
    .codehilite .ni     { color: #880000; font-weight: bold }  /* Name.Entity                 */
    .codehilite .ne     { color: #ff0000; font-weight: bold }  /* Name.Exception              */
